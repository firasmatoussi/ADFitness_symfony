                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Type</th>
                <th>Salle</th>
                <th>Nom du Coach</th>
                <th>Date</th>
                <th>Nombre de place</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cour in cours %}
            <tr>
                <td>{{ cour.lib }}</td>
                <td>{{ cour.type }}</td>
                <td>{{ cour.salle }}</td>
                <td>{{ cour.coachName }}</td>
                <td>{% if cour.date %}{{ cour.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ cour.nbPlace }}</td>
                <td>
                            <a class="btn btn-primary" role="button" href="{{ path('cours_show_admin', { 'id': cour.id }) }}">Afficher</a>

                            <a class="btn btn-warning" role="button" href="{{ path('cours_edit_admin', { 'id': cour.id }) }}">Modifier</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>





