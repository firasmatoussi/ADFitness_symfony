{% extends 'base.html.twig' %}

{% block content %}
    <h1>Equipement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipement.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ equipement.reference }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ equipement.libelle }}</td>
            </tr>
            <tr>
                <th>Domaine</th>
                <td>{{ equipement.domaine }}</td>
            </tr>
            <tr>
                <th>Salle</th>
                <td>{{ equipement.salle }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if equipement.date %}{{ equipement.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ equipement.etat }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('equipements_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('equipements_edit', { 'id': equipement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
