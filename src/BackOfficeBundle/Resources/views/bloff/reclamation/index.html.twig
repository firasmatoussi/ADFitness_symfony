{% extends 'base.html.twig' %}

{% block content %}
    <h1>Reclamations list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Lib</th>
                <th>Exp</th>
                <th>Dat</th>
                <th>Tex</th>
                <th>Etat</th>
                <th>Reponse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td><a href="{{ path('reclamation_show', { 'id': reclamation.id }) }}">{{ reclamation.id }}</a></td>
                <td>{{ reclamation.lib }}</td>
                <td>{{ reclamation.exp }}</td>
                <td>{% if reclamation.dat %}{{ reclamation.dat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ reclamation.tex }}</td>
                <td>{% if reclamation.etat %}Yes{% else %}No{% endif %}</td>
                <td>{{ reclamation.reponse }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reclamation_show', { 'id': reclamation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reclamation_edit', { 'id': reclamation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reclamation_new') }}">Create a new reclamation</a>
        </li>
    </ul>
{% endblock %}
