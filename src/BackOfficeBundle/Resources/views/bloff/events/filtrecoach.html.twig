{% extends 'base.html.twig' %}

{% block content %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Gestion des events / Nom du coach</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <thead>
                                <tr>


                                    <th>Titre</th>
                                    <th>Lieu</th>
                                    <th>Nbp</th>
                                    <th>Coach</th>
                                    <th>Date</th>
                                    <th>Descp</th>
                                    <th>Actions</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for event in events %}
                                    <tr>
                                        <td>{{ event.titre }}</td>
                                        <td>{{ event.lieu }}</td>
                                        <td>{{ event.nbP }}</td>
                                        <td>{{ event.coach }}</td>
                                        <td>{% if event.date %}{{ event.date|date('Y-m-d') }}{% endif %}</td>
                                        <td>{{ event.descp }}</td>
                                        <td>
                                            <a class="btn btn-primary" role="button" href="{{ path('events_show', { 'id': event.id }) }}">Afficher</a>

                                            <a class="btn btn-warning" role="button" href="{{ path('events_edit', { 'id': event.id }) }}">Modifier</a>

                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>


                            <a class="btn btn-primary" role="button" href="{{ path('events_index') }}">Afficher toute la liste</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
