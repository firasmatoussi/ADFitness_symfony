{% extends 'base.html.twig' %}

{% block content %}
    <h1>Reservation</h1>

    <table>
        <tbody>
            <tr>
                <th>Idr</th>
                <td>{{ reservation.idr }}</td>
            </tr>
            <tr>
                <th>Eve</th>
                <td>{{ reservation.eve }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ reservation.fullname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reservation.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ reservation.phone }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reservations_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reservations_edit', { 'idr': reservation.idr }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
