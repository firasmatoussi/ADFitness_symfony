{% extends 'base.html.twig' %}

{% block content %}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Gestion de reservation</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">

            </div>
        </div>
    </div>
</div>


<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Table reservation</strong>
                    </div>
                    <div class="card-body">

                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">

        <thead>
            <tr>

                <th>Eve</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Phone</th>

            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>

                <td>{{ reservation.eve }}</td>
                <td>{{ reservation.fullname }}</td>
                <td>{{ reservation.email }}</td>
                <td>{{ reservation.phone }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reservations_show', { 'idr': reservation.idr }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reservations_edit', { 'idr': reservation.idr }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
