{% extends 'base.html.twig' %}

{% block content %}


    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Gestion de reservation</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                </div>
            </div>
        </div>
    </div>
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">

                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ reservation.id }}</td>
                                </tr>
                                <tr>
                                    <th>Lib</th>
                                    <td>{{ reservation.lib }}</td>
                                </tr>
                                <tr>
                                    <th>Type</th>
                                    <td>{{ reservation.username }}</td>
                                </tr>
                                <tr>
                                    <th>Salle</th>
                                    <td>{{ reservation.email }}</td>
                                </tr>

                                </tbody>
                            </table>

                            <table>
                                <tr><td>
                                        <a class="btn btn-primary" role="button" href="{{ path('all_reserv_index_admin') }}">Back to the list Reservation</a>
                                    </td>
                                </tr>
                                <tr><td>
                                        <a class="btn btn-warning" role="button" href="{{ path('reserv_index_admin') }}">Back to the list Course</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <a class="btn btn-success" role="button" href="{{ path('reservation_edit_admin', { 'id': reservation.id }) }}">Edit</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        {{ form_start(delete_form) }}
                                        <input  type="submit" value="Delete" class="btn btn-danger" onclick="confirm('Voullez-vous supprimer ce cours?') || event.preventDefault()">
                                        {{ form_end(delete_form) }}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
