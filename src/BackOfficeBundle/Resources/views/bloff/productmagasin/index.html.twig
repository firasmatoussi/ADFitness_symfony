{% extends 'base.html.twig' %}

{%  block content %}
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Store Management</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="#">Store Management</a></li>
                        <li><a href="#">Table</a></li>
                        <li class="active">Product table</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Product table</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Fabricationdate</th>
                                    <th>Expirationdate</th>
                                    <th>Amount</th>
                                    <th>Cathegory</th>
                                    <th>Storeid</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for productMagasin in productMagasins %}
                                    <tr>
                                        <td><a href="{{ path('productmagasin_show', { 'id': productMagasin.id }) }}">{{ productMagasin.id }}</a></td>
                                        <td>{{ productMagasin.name }}</td>
                                        <td>{{ productMagasin.price }}</td>
                                        <td>{{ productMagasin.quantity }}</td>
                                        <td>{{ productMagasin.fabricationDate }}</td>
                                        <td>{{ productMagasin.expirationDate }}</td>
                                        <td>{{ productMagasin.amount }}</td>
                                        <td>{{ productMagasin.cathegory }}</td>
                                        <td>{{ productMagasin.storeid }}</td>
                                        <td>
                                            <ul>
                                                <li>
                                                    <a class="btn btn-primary" role="button" href="{{ path('productmagasin_show', { 'id': productMagasin.id }) }}">show</a>
                                                </li>
                                                <li>
                                                    <a class="btn btn-warning" role="button" href="{{ path('productmagasin_edit', { 'id': productMagasin.id }) }}">edit</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <ul>
                    <li>
                        <a href="{{ path('productmagasin_new') }}">Create a new productMagasin</a>
                    </li>
                </ul>
            </div>
        </div><!-- .animated -->
    </div><!-- .content -->
{% endblock %}
