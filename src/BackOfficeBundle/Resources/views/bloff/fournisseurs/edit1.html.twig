{% extends 'base.html.twig' %}

{% block content %}
    <div class="card-header">
        <strong class="card-title">Modification des informations du Fournisseur</strong>
    </div>
    {% set flashbag_notices = app.session.flashbag.get('notice') %}
    {%  if flashbag_notices is not empty  %}

        {%  for notice in flashbag_notices %}
            <div class="col-sm-12">
                <div class="alert  alert-danger alert-dismissible fade show" role="alert" >
                    <div style="text-align: center">{{ notice }}</div>
                </div>
            </div>

        {% endfor %}


    {% endif %}
    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">

        {{ form_start(edit_form) }}
        <tr>
            <td>{{ form_label(edit_form.nom)}}</td>
            <td>
                {{ form_widget(edit_form.nom) }}
            </td>
        </tr>
        <tr>
            <td>{{ form_label(edit_form.adresse)}}</td>
            <td>
                {{ form_widget(edit_form.adresse) }}
            </td>
        </tr>
        <tr>
            <td>{{ form_label(edit_form.telephone)}}</td>
            <td>
                {{ form_widget(edit_form.telephone) }}
            </td>
        </tr>
        <tr>
            <td>{{ form_label(edit_form.email)}}</td>
            <td>
                {{ form_widget(edit_form.email) }}
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input class="btn btn-warning" type="submit" value="Valider" /> </td>
        </tr>
        {{ form_end(edit_form) }}

    </table>
    <a class="btn btn-primary" href="{{ path('fournisseurs_index') }}">Retourner a la iste des Fournisseurs</a>
{% endblock %}