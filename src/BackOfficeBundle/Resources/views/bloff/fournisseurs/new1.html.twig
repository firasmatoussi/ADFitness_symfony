{% extends 'base.html.twig' %}

{% block content %}
    <h1>Ajout fournisseur</h1>
    {% set flashbag_notices = app.session.flashbag.get('notice') %}
    {%  if flashbag_notices is not empty  %}
        {%  for notice in flashbag_notices %}
            <div class="col-sm-12">
                <div class="alert  alert-danger alert-dismissible fade show" role="alert" >
                    <div style="text-align: center">{{ notice }}</div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
<table id="bootstrap-data-table-export" class="table table-striped table-bordered">
    {{ form_start(form) }}
    <tr>
        <td>{{ form_label(form.nom)}}</td>
        <td>
            {{ form_widget(form.nom) }}
        </td>
    </tr>
    <tr>
        <td>{{ form_label(form.adresse)}}</td>
        <td>
            {{ form_widget(form.adresse) }}
        </td>
    </tr>
    <tr>
        <td>{{ form_label(form.telephone)}}</td>
        <td>
            {{ form_widget(form.telephone) }}
        </td>
    </tr>
    <tr>
        <td>{{ form_label(form.email)}}</td>
        <td>
            {{ form_widget(form.email) }}
        </td>
    </tr>
    <tr>

        <td>
            <input class="btn btn-primary" type="submit" value="Ajouter">
            <a class="btn btn-warning" href="{{ path('fournisseurs_index') }}">Retour</a>
        </td>
    </tr>
    {{ form_end(form) }}
</table>


{% endblock %}
