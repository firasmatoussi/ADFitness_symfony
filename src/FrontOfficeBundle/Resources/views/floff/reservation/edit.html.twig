{% extends '@FrontOffice/AD-fitness/Cours.html.twig' %}

{% block content %}


    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">

                        <div class="card-body">

                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                {{ form_start(edit_form) }}
                                <tr>
                                    <td>Username</td>
                                    <td>{{ form_widget(edit_form.username) }}</td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td>{{ form_widget(edit_form.email) }}</td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><input class="btn btn-danger" type="submit" value="Modifier" /></td>
                                </tr>
                                {{ form_end(edit_form) }}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
