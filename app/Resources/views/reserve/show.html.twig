{% extends 'base.html.twig' %}

{% block content %}
    <h1>Liste des personnes réservés </h1>
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Gestion de reservation</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">

                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">


       <tbody> <thead>
        <tr>

            <th>Evènement</th>
            <th>Fullname</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
        </thead>


            {% for reservations in reservations %}


<tr>
            <td>{{ reservations.eve }}</td>



            <td>{{ reservations.fullname }}</td>



            <td>{{ reservations.email }}</td>



            <td>{{ reservations.phone }}</td>

</tr>
            {% endfor %}


        </tbody>
    </table>


{% endblock %}
