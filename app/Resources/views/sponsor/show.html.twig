{% extends 'base.html.twig' %}

{% block content %}
    <h1>Sponsor</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sponsor.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sponsor.nom }}</td>
            </tr>
            <tr>
                <th>Domaine</th>
                <td>{{ sponsor.domaine }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ sponsor.contact }}</td>
            </tr>
            <tr>
                <th>Datepacte</th>
                <td>{% if sponsor.datepacte %}{{ sponsor.datepacte|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sponsor_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
