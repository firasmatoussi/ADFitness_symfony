{% extends 'base.html.twig' %}

{% block content %}
    <h1>Acte</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ acte.id }}</td>
            </tr>
            <tr>
                <th>Idsp</th>
                <td>{{ acte.idsp }}</td>
            </tr>
            <tr>
                <th>Nomsp</th>
                <td>{{ acte.nomsp }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if acte.date %}{{ acte.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ acte.montant }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('acte_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('acte_edit', { 'id': acte.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
